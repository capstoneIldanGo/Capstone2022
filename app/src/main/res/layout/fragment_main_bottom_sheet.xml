<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/activity_bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/AppBottomSheetDialogTheme"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    android:padding="20dp">

    <TextView
        android:id="@+id/main_bottomsheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일단고"
        android:textSize="35sp"
        android:textColor="@color/black"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icon_heart_filled_small"
        android:textAlignment="textStart"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text=" 찜한 목록" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icon_notifications_small"
        android:textAlignment="textStart"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text=" 알림 설정" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logstate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icon_logout_small"
        android:textAlignment="textStart"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text=" 로그아웃" />

</LinearLayout>