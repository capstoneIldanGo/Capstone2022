<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/activity_sorting_bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/AppBottomSheetDialogTheme"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="10dp">

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정렬"
            android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSortingLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:text="최신순"
            android:textAlignment="viewStart"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSortingLowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:textSize="12sp"
            android:text="저가순"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="플랫폼"
        android:textSize="16sp"/>


    <Button
        android:id="@+id/btnAllPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:textSize="12sp"
        android:text="전체"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCarrotMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="당근마켓"/>

        <Button
            android:id="@+id/btnJunggoMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="중고나라"/>

        <Button
            android:id="@+id/btnThunderMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="번개장터"/>

        <Button
            android:id="@+id/btnHelloMarcket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="헬로마켓" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태그"
        android:padding="0dp"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTagFavoriteArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="12sp"
            android:padding="0dp"
            android:text="관심지역"/>

        <Button
            android:id="@+id/btnTagSclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="12sp"
            android:padding="0dp"
            android:text="미개봉중고"/>


    </LinearLayout>


</LinearLayout>