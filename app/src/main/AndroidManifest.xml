<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ildango.capstone">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Capstone"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.ildango.capstone.MainActivity"
            android:theme="@style/Theme.App.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".mywishlist.MyWishListActivity" />
        <activity android:name=".myalarmlist.MyAlarmListActivity"/>
        <activity android:name=".result.ResultActivity"/>
        <activity android:name=".resultdetail.ResultDetailActivity" />
        <activity android:name=".productdetail.ProductDetailActivity" />
        <activity android:name=".OnBoardingActivity" />
        <activity android:name=".myinfo.GetInfoActivity" />

    </application>

</manifest>